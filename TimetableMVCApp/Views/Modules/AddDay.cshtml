@model TimetableMVCApp.Models.ModuleDay

@{
    ViewData["Title"] = "AddDay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Module Days</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ModuleId" class="control-label"></label>
                <select asp-for="ModuleId" class="form-control" asp-items="ViewBag.ModuleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DayId" class="control-label"></label>
                <select asp-for="DayId" class ="form-control" asp-items="ViewBag.DayId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <p class="btn btn-warning">
                <a asp-action="Index">Back to List</a>
            </p>
        </form>
    </div>
</div>


