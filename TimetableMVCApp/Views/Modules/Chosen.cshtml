@model IEnumerable<TimetableMVCApp.Models.Module>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Days.ElementAt(0).Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Days.ElementAt(0).Time.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Days.ElementAt(0).Time.EndTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var module in Model) {
    
            @foreach (var day in module.Days)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => module.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => day.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => day.Time.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => day.Time.EndTime)
                    </td>
                    <td>
                        <p class="btn btn-danger">
                            <a asp-action="Remove" asp-route-id="@module.ModuleId">Deregister</a>
                        </p>
                    </td>
                </tr>
            }
            
}
    </tbody>
</table>
